{
  "manifest_version": 3,
  "name": "Museum Jobtool MVP",
  "version": "0.1.0",
  "permissions": ["activeTab", "scripting", "downloads"],
  "host_permissions": ["http://localhost:3000/*"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "求人票生成"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
